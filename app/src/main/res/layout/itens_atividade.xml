<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivDesafio"
        android:layout_width="76dp"
        android:layout_height="87dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vector" />

    <TextView
        android:id="@+id/tvNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Nome da atv"
        android:textColor="#1F3099"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivDesafio"
        app:layout_constraintTop_toTopOf="@+id/ivDesafio" />

    <TextView
        android:id="@+id/tvDescricao"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:text="Descriçãozinha, bem zinha mesmo"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivDesafio"
        app:layout_constraintStart_toEndOf="@+id/ivDesafio"
        app:layout_constraintTop_toBottomOf="@+id/tvNome"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/ivPlay"
        android:layout_width="60dp"
        android:layout_height="52dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivDesafio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toEndOf="@+id/tvDescricao"
        app:layout_constraintTop_toTopOf="@+id/ivDesafio"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ellipse" />
</androidx.constraintlayout.widget.ConstraintLayout>